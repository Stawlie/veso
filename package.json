{
  "name": "veso",
  "version": "1.0.0-alpha.9",
  "description": "Simple, lightweight and typesafe chain validator!",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "type": "module",
  "scripts": {
    "dev": "nodemon lib/index.js",
    "clean": "npx rimraf lib",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "test": "jest --config",
    "build:esm": "rollup --config ./configs/rollup.config.js",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "build:types": "tsc -p ./configs/tsconfig.types.json",
    "version:patch": "npm version patch -no-git-tag-version",
    "version:minor": "npm version minor -no-git-tag-version",
    "version:major": "npm version major -no-git-tag-version"
  },
  "keywords": [
    "validation",
    "typesafe",
    "rules"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stawlie/veso.git"
  },
  "bugs": {
    "url": "https://github.com/Stawlie/veso/issues"
  },
  "homepage": "https://github.com/Stawlie/veso#readme",
  "files": [
    "/lib",
    "/index.d.ts"
  ],
  "types": "./index.d.ts",
  "author": "Stawlie",
  "license": "MIT",
  "devDependencies": {
    "@babel/types": "^7.24.6",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "nodemon": "^3.1.1",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5"
  }
}
